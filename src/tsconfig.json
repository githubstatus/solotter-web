{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "../dist",
    "moduleResolution": "node",
    "target": "es2015",
    "sourceMap": true,
    "plugins": [
      {
        "mocha": true
      }
    ],
    "experimentalDecorators": true,
    "strict": true,
    "strictPropertyInitialization": false
  },
  "exclude": [
    "node_modules"
  ]
}