extends layout

block content
  h1= title
  form(
    action="/tweet/post-tweet"
    method="POST"
    style="width: 600px;"
  )
    p #{twitterUser.screenName}
    textarea(
      name="tweet_content"
      placeholder="What are you doing?"
      style="width: 100%;"
      rows=4
      required
      max-length=280
    )
    button(type="submit") Submit

  p= status
  p= errorMessage
